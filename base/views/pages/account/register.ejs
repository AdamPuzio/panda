<%- include('/inc/base/header', {}) %>
<%
if(typeof errors === 'undefined') errors = { data: [] }
if(typeof values === 'undefined') values = {}
%>

    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
      <article class="card-body">
		<header class="mb-4"><h4 class="card-title">Sign up</h4></header>
        <% if(errors.length > 0) {
          for(var i=0; i<errors.length; i++) {
            var err = errors[i]
            if(typeof err === 'object' && err.message) err = err.message
            %>
            <div class="alert alert-danger" role="alert"><%-err%></div>
            <%
          }
        } %>
		<form method="post">
          <div class="form-row">
            <div class="col form-group">
              <label>First name</label>
              <input name="firstName" type="text" class="form-control" placeholder="" value="<%-values.firstName%>" />
            </div> <!-- form-group end.// -->
            <div class="col form-group">
              <label>Last name</label>
              <input name="lastName" type="text" class="form-control" placeholder="" value="<%-values.lastName%>" />
            </div> <!-- form-group end.// -->
          </div> <!-- form-row end.// -->
          <div class="form-group">
            <label>Email</label>
            <input name="email" type="email" class="form-control" placeholder="" value="<%-values.email%>" />
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label>Create password</label>
              <input name="password" class="form-control" type="password" value="<%-values.password%>" />
            </div> <!-- form-group end.// --> 
            <div class="form-group col-md-6">
              <label>Repeat password</label>
              <input name="passwordConfirm" class="form-control" type="password" value="<%-values.passwordConfirm%>" />
            </div> <!-- form-group end.// -->  
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"> Register  </button>
          </div> <!-- form-group// -->      
          <!--<div class="form-group"> 
            <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked=""> <div class="custom-control-label"> I agree with the <a href="#">terms and contitions</a>  </div> </label>
          </div>--> <!-- form-group end.// -->           
        </form>
      </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Have an account? <a href="/login">Log In</a></p>
    <br><br>

<%- include('/inc/base/footer', {}) %>